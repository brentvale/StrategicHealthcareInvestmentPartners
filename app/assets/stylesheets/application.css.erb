.image-container{
  position: relative;
  height: 208px; /*200px for image width + 8px for border*/
  width: 141px; /*133px for image width + 8px for border*/
  border: 4px solid white;
  border-radius:2px;
  display:inline-block;
}
.image-container img {
  height: 200px;
  width:266px;
  position:absolute;
  top: 0;
  left: 0;
}
.pos-1{
  clip:rect(0 133px 200px 0);
}
.profile:hover div div img{
  clip: rect(0px 266px 200px 133px);
  left: -133px;
  opacity: 0.80;
  -webkit-animation: fade-in-eighty .2s forwards; /* Safari 4+ */
  -moz-animation:    fade-in-eighty .2s forwards; /* Fx 5+ */
  -o-animation:      fade-in-eighty .2s forwards; /* Opera 12+ */
  animation:         fade-in-eighty .2s forwards;
}
@-webkit-keyframes fade-in-eighty {
  0%   { opacity: 0.80; }
  100% { opacity: 1.0; }
}
@-moz-keyframes fade-in-eighty {
  0%   { opacity: 0.80; }
  100% { opacity: 1.0; }
}
@-o-keyframes fade-in-eighty {
  0%   { opacity: 0.80; }
  100% { opacity: 1.0; }
}
@keyframes fade-in-eighty {
  0%   { opacity: 0.80; }
  100% { opacity: 1.0; }
}
.profile:hover div div.image-container{
  -webkit-animation: border-show .2s forwards; /* Safari 4+ */
  -moz-animation:    border-show .2s forwards; /* Fx 5+ */
  -o-animation:      border-show .2s forwards; /* Opera 12+ */
  animation:         border-show .2s forwards;
}
/* --headings-color: #009bbf */
@-webkit-keyframes border-show {
  0%   { border: 4px solid white; }
  100% { border: 4px solid #009bbf; }
}
@-moz-keyframes border-show {
  0%   { border: 4px solid white; }
  100% { border: 4px solid #009bbf; }
}
@-o-keyframes border-show {
  0%   { border: 4px solid white; }
  100% { border: 4px solid #009bbf; }
}
@keyframes border-show {
  0%   { border: 4px solid white; }
  100% { border: 4px solid #009bbf; }
}

/* NAVIGATION */
nav.navbar-default li a.sliding-u-l-r{
  color:var(--headings-color);
  font-size: 1.3em;
}
nav ul li:hover{
  color:var(--dark-blue);
}
.navbar-brand.navbar-logo:hover{
  color:var(--dark-blue);
}
.sliding-u-l-r {
  display: inline-block;
  cursor:pointer;
}
.sliding-u-l-r:after {
  content: '';
  display: block;
  height: 1px;
  width: 0;
  background: transparent;
  transition: width .25s ease, background-color .25s ease;
}
.sliding-u-l-r:hover:after {
  background: var(--dark-blue);
  width:100%;
}
svg{
  height:100%;
  display:inline;
  margin-left:30px;
}


.sliding-u-l-r {
  display: inline-block;
  cursor:pointer;
}
.sliding-u-l-r:after {
  content: '';
  display: block;
  height: 1px;
  width: 0;
  background: transparent;
  transition: width .25s ease, background-color .25s ease;
}
.sliding-u-l-r:hover:after {
  background: var(--dark-blue);
  width:100%;
}

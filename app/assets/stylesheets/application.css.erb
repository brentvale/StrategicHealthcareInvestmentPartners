:root {
  --headings-color: #009bbf;
  --lightest-blue: #00CAFF;
  --dark-blue: #003340;
}

html{
  font-size: 16px;
  margin: 0px;
}
body{
  background-color:white;
/*  color: var(--dark-blue);*/
  color:black;
  font-family: 'Roboto', arial;
  font-size: 62.5%;
  font-weight:400;
  letter-spacing:2px;
  margin:0;
}
.container-fluid{
  padding:0;
}
h1{
  border-radius:3px;
  font-size:6em;
  font-weight:400;
  margin-left:50px;
  position:absolute;
  top: 250px;
  top: 30vh;
}
h1#homeHeading{
  color:var(--dark-blue);
  -webkit-text-stroke: 0.5px #00CAFF;
}
h1#aboutHeading{
  color:var(--dark-blue);
  -webkit-text-stroke: 0.5px yellow;
}
h1#teamHeading{
  color:white;
  -webkit-text-stroke: 0.5px black;
}
h2, h3{
  text-align:center;
  font-weight:100;
  max-width:500px;
  margin-left:auto;
  margin-right:auto;
}
p, ul{
  font-size: 2.0em;
  font-weight:100; 
}
p{
  line-height: 1.8em;
  max-width: 800px;
  padding: 30px;
}
footer{
  background-color: var(--dark-blue);
  width: 100%;
}
footer p{
  color: var(--lightest-blue);
  font-weight:400;
  margin-bottom: 0;
  text-align:center;
  max-width:2000px;
}
ul.section-list{
  max-width:800px;
}
.center-block{
  margin-left:auto;
  margin-right:auto;
  left:0;
  right:0;
}
.bg-image{
  background-size: cover;
  background-position: center right;
  min-height: 500px;
  height: 80vh;
}
section.section-info{
  margin: 50px 0px 50px;
}
/*NOTIFICATIONS*/
.notice, .alert{
  font-size: 2em;
  max-width: 2000px;
  margin: 0px;
  padding:10px;
  width:100%;
}
.notice{
  background-color: #abf2c2;
  border: 3px solid green;
}
.alert{
  background-color: #f2abab;
  border: 3px solid red;
}
/* NAVIGATION */
#navLogo:hover{
  color: var(--dark-blue);
}
nav.navbar{
  margin-bottom: 0px;
  padding-bottom: 10px;
  padding-top:10px;
}
nav.navbar.navbar-default.navbar-fixed-top{
  display:block;
  position:relative;
}
.navbar-default .navbar-nav>li>a{
  color: var(--headings-color);
}
.navbar-header .navbar-brand.navbar-logo{
  color: var(--headings-color);
}
ul.navigation-list{
  font-size: 1.5em;
  width: 90%;
}
.navbar-nav > li.right-list-item{
  float:right;
}
.navbar-default .navbar-nav > li.is-active > a{
  color: var(--dark-blue);
}
.navbar-header .navbar-brand.navbar-logo.logo-is-active{
  color: var(--dark-blue);
}
.sliding-u-l-r {
  display: inline-block;
}
.sliding-u-l-r:after {
  content: '';
  display: block;
  height: 2px;
  width: 0;
  background: transparent;
  transition: width .5s ease, background-color .5s ease;
}
.sliding-u-l-r:hover:after {
  width: 100%;
  background: var(--dark-blue);
}
/* FORMS */
.actions div{
  margin-top: 30px;
  margin-bottom: 30px;
}
.big-button{
  font-size: 2em;
  height:50px;
  width: 200px;
}
.big-button:hover{
  background-color: #595959;
  color: white;
}
.field{
  font-size: 1.5em;
}
.field p{
  font-size: 1.5em;
}
.field p span{
  font-weight: bold;
}
.section-fieldset{
  margin-left: auto;
  margin-right: auto;
  margin-top:20px;
  margin-bottom:20px;
  width: 60%;
}
.paragraph-fieldset{
  min-height:150px;
}
.paragraph-fieldset textarea{
  min-height:100px;
}
.list-item-textarea{
  margin-left: 30px;
}
.heading-text{
  font-size: 1.5em;
  font-weight: bold;
  margin-left:auto;
  margin-right:auto;
  width: 40%;
}
textarea{
    font-size: 1.5em;
    height: 100%;
    width: 100%;
    -webkit-box-sizing: border-box; /* Safari/Chrome, other WebKit */
    -moz-box-sizing: border-box;    /* Firefox, other Gecko */
    box-sizing: border-box;         /* Opera/IE 8+ */
}
.devise-forms{
  height:600px;
  height: 80vh;
  margin-left: 50px;
}
/* HOME */
#homeBgOne{
  background-image: url("<%= asset_path('dna_helix_silver_low_res.jpg')%>");
}
/* ABOUT */
#aboutBgOne{
  background-image: url("<%= asset_path('biotech_abstract_visionary_background_low_res.jpg')%>");
}
/* TEAM */
#teamBgOne{
  background-image: url("<%= asset_path('golden_gate_low_res.jpg')%>");
  background-position: center center;
}
.profile-container{
  max-width:800px;
  padding:30px;
  width:80%;
}
.profile-container .heading-sect, .profile-container .body-sect{
  width:100%;
}
.profile-container .heading-sect{
  text-align:center;
}
p.bio-text{
  padding: 0;
}
.image-container{
  border: 6px solid white;
  display:inline-block;
  height: 212px; /*200px for image width + 12px for border*/
  width: 145px; /*133px for image width + 12px for border*/
  position: relative;
}
.image-container img{
  clip:rect(0px 133px 200px 0px);
  height: 200px;
  width:266px;
  position:absolute;
  top: 0;
  left: 0;
}
.title-container{
  display:inline-block;
  text-align:left;
  vertical-align:top;
}
.title-container h3{
  text-align:left;
}
.title-container h3 span{
  font-size:.8em;
}
.linked-in-logo{
  background-image: url("<%= asset_path('linked_in_logo_sprite.gif') %>");
  background-size: 100% 200%;
  background-position: 0 100%;
  padding-top:0px;
  border-radius: 2px;
  display:inline-block;
  height:20px;
  width:60px;
}
.linked-in-logo:hover{
 background-position: 0 0;
 cursor:hand;
 cursor:pointer;
}
.heading-sect:hover .image-container img{
  clip:rect(0px 266px 200px 133px);
  left:-133px;
  -webkit-animation: fade-in-eighty .2s forwards; /* Safari 4+ */
  -moz-animation:    fade-in-eighty .2s forwards; /* Fx 5+ */
  -o-animation:      fade-in-eighty .2s forwards; /* Opera 12+ */
  animation:         fade-in-eighty .2s forwards;
}
.heading-sect:hover .image-container{
  -webkit-animation: border-show    .2s forwards; 
  -moz-animation:    border-show    .2s forwards;
  -o-animation:      border-show    .2s forwards;
  animation:         border-show    .2s forwards;
}
@-webkit-keyframes fade-in-eighty {
  0%   { opacity: 0.80; }
  100% { opacity: 1.0; }
}
@-moz-keyframes fade-in-eighty {
  0%   { opacity: 0.80; }
  100% { opacity: 1.0; }
}
@-o-keyframes fade-in-eighty {
  0%   { opacity: 0.80; }
  100% { opacity: 1.0; }
}
@keyframes fade-in-eighty {
  0%   { opacity: 0.80; }
  100% { opacity: 1.0; }
}
/* --headings-color: #009bbf */
@-webkit-keyframes border-show {
  0%   { border: 6px solid white; }
  100% { border: 6px solid #009bbf; }
}
@-moz-keyframes border-show {
  0%   { border: 6px solid white; }
  100% { border: 6px solid #009bbf; }
}
@-o-keyframes border-show {
  0%   { border: 6px solid white; }
  100% { border: 6px solid #009bbf; }
}
@keyframes border-show {
  0%   { border: 6px solid white; }
  100% { border: 6px solid #009bbf; }
}

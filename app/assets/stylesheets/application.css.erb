#innovationBox{
  height:500px;
  position:relative; 
  width: 500px;
}
.graph{
  font-size: 1.4em;
  font-weight:200;
}
.graph-vertical-text{
  -ms-transform:rotate(270deg); /* IE 9 */
  -moz-transform:rotate(270deg); /* Firefox */

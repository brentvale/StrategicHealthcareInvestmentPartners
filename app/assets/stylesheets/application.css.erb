/*MEDIA QUERIES*/
@media screen and (min-width: 1100px){
  .image-container{
    height: 412px;
    width: 278px;
  }
  .image-container img{
    clip:rect(0px 266px 400px 0px);
    height: 400px;
    width:532px;
  }
  .title-container h3{
    font-size:3.5em;
  }
  .linked-in-logo{
    border-radius: 4px;
    height:30px;
    width:90px;
  }
  .heading-sect:hover .image-container img{
    clip:rect(0px 532px 400px 266px);
    left:-266px;
  }
}
@media screen and (max-width: 691px){
  .sliding-u-l-r:hover:after {
    width: 20%;
  }
  ul.navigation-list{
    width: 100%;
  }
  .navbar-nav > li.right-list-item{
    float:none;
  }
  .profile-container{
    width:100%;
  }
}
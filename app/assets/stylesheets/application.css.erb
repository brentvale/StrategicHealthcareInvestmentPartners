/* darkest 003340 */
:root {
  --headings-color: #009bbf;
  --lightest-blue: #00CAFF;
  --dark-blue: #003340;
}

html{
  font-size: 16px;
  margin: 0px;
}
body{
  background-color:white;
/*  color: var(--dark-blue);*/
  color:black;
  font-family: 'Roboto', arial;
  font-size: 62.5%;
  font-weight:400;
  letter-spacing:2px;
  margin:0;
}
.container-fluid{
  padding:0;
}
h1{
  margin-left:50px;
  font-size:5em;
  font-weight:400;
  border-radius:3px;
}
h1#homeHeading, h1#aboutHeading, h1#teamHeading{
  position:absolute;
  top: 250px;
  top: 30vh;
}
h1#homeHeading{
  color:var(--dark-blue);
  -webkit-text-stroke: 0.5px #00CAFF;
}
h1#aboutHeading{
  color:var(--dark-blue);
  -webkit-text-stroke: 0.5px yellow;
}
h1#teamHeading{
  color:white;
  -webkit-text-stroke: 0.5px black;
}
h2, h3{
  text-align:center;
  font-weight:100;
  max-width:500px;
  margin-left:auto;
  margin-right:auto;
}
p, ul{
  font-size: 1.8em;
  font-weight:100; 
}
p{
  max-width: 800px;
  padding: 30px;
}
footer{
  background-color: var(--dark-blue);
  width: 100%;
}
footer p{
  color: var(--lightest-blue);
  font-weight:400;
  margin-bottom: 0;
  text-align:center;
  max-width:2000px;
}
ul.section-list{
  max-width:800px;
}
.center-block{
  margin-left:auto;
  margin-right:auto;
  left:0;
  right:0;
}
.block-text{
  max-width:500px;
  width:70%;
  margin-left:auto;
  margin-right:auto;
}
.bg-image{
  background-size: cover;
  background-position: center right;
  min-height: 500px;
  height: 80vh;
}
/* NAVIGATION */
#navLogo:hover{
  color: var(--dark-blue);
}
nav.navbar{
  margin-bottom: 0px;
  padding-bottom: 10px;
  padding-top:10px;
}
nav.navbar.navbar-default.navbar-fixed-top{
  display:block;
  position:relative;
}
.navbar-default .navbar-nav>li>a{
  color: var(--headings-color);
}
.navbar-header .navbar-brand.navbar-logo{
  color: var(--headings-color);
}
ul.navigation-list{
  font-size: 1.5em;
  width: 90%;
}
.navbar-nav > li.right-list-item{
  float:right;
}
.navbar-default .navbar-nav > li.is-active > a{
  color: var(--dark-blue);
}
.navbar-header .navbar-brand.navbar-logo.logo-is-active{
  color: var(--dark-blue);
}
.sliding-u-l-r {
  display: inline-block;
}
.sliding-u-l-r:after {
  content: '';
  display: block;
  height: 2px;
  width: 0;
  background: transparent;
  transition: width .5s ease, background-color .5s ease;
}
.sliding-u-l-r:hover:after {
  width: 100%;
  background: var(--dark-blue);
}
/* HOME */
#homeBgOne{
  background-image: url("<%= asset_path('dna_helix_silver_low_res.jpg')%>");
}
/* ABOUT */
#aboutBgOne{
  background-image: url("<%= asset_path('biotech_abstract_visionary_background_low_res.jpg')%>");
}
/* TEAM */
#teamBgOne{
  background-image: url("<%= asset_path('golden_gate_low_res.jpg')%>");
  background-position: center center;
}
@media screen and (max-width: 691px){
  .sliding-u-l-r:hover:after {
    width: 20%;
  }
  ul.navigation-list{
    width: 100%;
  }
  .navbar-nav > li.right-list-item{
    float:none;
  }
}